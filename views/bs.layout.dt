doctype html

//- default variables used to customize the page
- string title;
- string body_class = "bs-blue";
//- override to set the custom variables
block defs

html
	head
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel="stylesheet", href="#{req.rootDir}styles/normalize.css")
		link(rel="stylesheet", href="#{req.rootDir}styles/bootstrap.css")
		script(src="#{req.rootDir}scripts/bootstrap.js")
		block head
	body(class=body_class)
		block body
